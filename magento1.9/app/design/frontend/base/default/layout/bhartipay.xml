<layout version="0.1.0">
<!--
bhartipay Failure Response Review
-->
<bhartipay_processing_failure>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="bhartipay/failure" name="bhartipay_failure" template="bhartipay/failure.phtml" />
    </reference>
</bhartipay_processing_failure>
<bhartipay_processing_redirect>
    <reference name="root">
        <action method="setTemplate"><template>bhartipay/blank.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="bhartipay/redirect" name="bhartipay_redirect" template="bhartipay/redirect.phtml" />
    </reference>
</bhartipay_processing_redirect>
</layout>